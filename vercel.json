{
  "buildCommand": "npm run build",
  "installCommand": "npm install --legacy-peer-deps",
  "framework": "nextjs",
  "functions": {
    "app/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "crons": [
    {
      "path": "/api/cron/reset-daily-downloads",
      "schedule": "0 0 * * *",
      "timezone": "America/Sao_Paulo"
    }
  ],
  "env": {
    "PRISMA_GENERATE_DATAPROXY": "true"
  }
}
